<% post.comments.forEach(function(comment, index) { %>
    <!-- TODO Add "Floor Number", page turning, and delete function here-->
    <p>
        <a href = "<%= comment.website %>">
            <%= comment.name %>
        </a>
        <span class = "info">
            Replied on <%= comment.time %>
        </span>
    </p>
    <p>
        <%- comment.content %>
    </p>
<% }) %>

