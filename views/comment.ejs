    <% if (user) { %>
    Name: <label>
        <input type = "text" name = "name" value = "<%= user.name %>"/>
    </label><br />
    Email: <label>
        <input type = "text" name = "email" value = "<%= user.email %>"/>
    </label><br />
    Website: <label>
        <input type = "text" name = "website" value = "/u/<%= user.name %>" />
    </label><br />
