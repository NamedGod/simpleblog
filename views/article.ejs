<%- include header %>
<p>
    <% if (user && (user.name == post.name)) {%>
    <span>
        <a class = "edit" href = "/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
            Edit
        </a>
    </span>
    <span>
        <a class = "edit" href = "/delete/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
            Delete
        </a>
    </span>
    <% } %>
</p>
<p class = "info">
    Author: <a href = "/u/<%= post.name %>"><%= post.name %></a> |
    Time: <%= post.time.minute %>
    Tag(s):
    <% post.tags.forEach(function(tag, index) { %>
        <% if (tag) { %>
            <a class = "tag" href="/tags/<%= tag %>">
                <%= tag %>
            </a>
        <% } %>
    <% }) %>
</p>
<p>
    <%- post.post %>
</p>
<%- include comment %>
<%- include footer %>
